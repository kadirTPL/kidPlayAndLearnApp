<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFAB00"
    tools:context=".dayPlayingActivity">

    <TextView
        android:id="@+id/dayPTitle"
        android:layout_width="@dimen/dayptext_width"
        android:layout_height="@dimen/dayptext_height"
        android:background="@color/green"
        android:text="@string/dayPlaytitle"
        android:textAlignment="center"
        android:textColor="#491100"
        android:textSize="@dimen/dayptext_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.228" />

    <Button
        android:id="@+id/dayButton"
        android:layout_width="@dimen/daypButton_width"
        android:layout_height="@dimen/daypButton_height"
        android:backgroundTint="#1A237E"
        android:text="@string/clkPsubmit"
        android:textSize="@dimen/dayptext_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayPeditText"
        app:layout_constraintVertical_bias="0.6" />

    <EditText
        android:id="@+id/dayPeditText"
        android:layout_width="@dimen/dayptext_width"
        android:layout_height="@dimen/dayptext_height"
        android:ems="10"
        android:filterTouchesWhenObscured="false"
        android:freezesText="false"
        android:hint="@string/first"
        android:inputType="text|textCapCharacters"
        android:textColorHint="#423A39"
        android:textSize="@dimen/dayptext_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayPTitle"
        app:layout_constraintVertical_bias="0.334" />

</androidx.constraintlayout.widget.ConstraintLayout>