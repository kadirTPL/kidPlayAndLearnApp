        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.617" />

    <Button
        android:id="@+id/multiplicationlearningbutton"
        android:layout_width="@dimen/learn_button_width"
        android:layout_height="@dimen/learn_button_height"
        android:backgroundTint="#DFAEAE"
        android:drawableTop="@drawable/multlearnbutton"
        android:text="@string/multiplicationl"
        android:textColor="#017706"
        android:textSize="@dimen/learn_button_text_sizec"
