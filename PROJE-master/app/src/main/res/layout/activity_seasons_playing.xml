<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#880E4F"
    tools:context=".seasonsPlayingActivity">

    <ImageView
        android:id="@+id/seasPimg"
        android:layout_width="256dp"
        android:layout_height="256dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:srcCompat="@drawable/autumn" />

    <Button
        android:id="@+id/seasBut1"
        android:layout_width="125dp"
        android:layout_height="64dp"
        android:backgroundTint="#FFEA00"
        android:text="@string/seasonLSummer"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/seasPimg"
        app:layout_constraintTop_toTopOf="@+id/seasBut2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/seasBut2"
        android:layout_width="125dp"
        android:layout_height="64dp"
        android:backgroundTint="#76FF03"
        android:text="@string/seasonLSpring"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/seasPimg"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.709" />

    <Button
        android:id="@+id/seasBut3"
        android:layout_width="125dp"
        android:layout_height="64dp"
        android:backgroundTint="#432607"
        android:text="@string/seasonLAutumn"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/seasBut1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.825" />

    <Button
        android:id="@+id/seasBut4"
        android:layout_width="125dp"
        android:layout_height="64dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/seasonLWinter"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/seasBut2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/seasBut3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/seasPtxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#BF360C"
        android:textColor="#9CCC65"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.442" />

    <TextView
        android:id="@+id/seasPtxt2"
        android:layout_width="360dp"
        android:layout_height="30dp"
        android:background="#004D40"
        android:text="@string/seasonPquest"
        android:textAlignment="center"
        android:textColor="#FFAB91"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />
</androidx.constraintlayout.widget.ConstraintLayout>